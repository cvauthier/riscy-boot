#include "alu.mj"
#include "regs.mj"
#include "memory.mj"
#include "tools.mj"

(* Pour le moment - seulement LUI et les instructions arithm√©tiques *)

main() = () where
	
	pc = register<ROM_ADDR_SIZE>(new_pc,true);
	(new_pc,useless) = adder<ROM_ADDR_SIZE>(pc,power<ROM_ADDR_SIZE-3>(0).1.0.0,0);
	ins = rom<ROM_ADDR_SIZE,WORD_SIZE>(pc);

	opc = ins[25..31];
	rs1 = ins[12..16];
	rs2 = ins[7..11];
	rd = ins[20..24];

	aluop = ins[1] . ins[17..19];
	op_imm = opc[6] & opc[5] & opc[2] & not(opc[4] + opc[3] + opc[1] + opc[0]);
	op     = opc[6] & opc[5] & opc[2] & opc[1] & not(opc[4] + opc[3] + opc[0]);
	lui    = opc[6] & opc[5] & opc[4] & opc[2] & opc[1] & not(opc[3] + opc[0]);

	(rs1_data,rs2_data) = register_block(rs1,rs2,rd,wr_data,true);
	alu_data2 = mux_n<WORD_SIZE>(op_imm,sign_extend<12,WORD_SIZE>(ins[0..11]),rs2_data);
	alu_res = alu(rs1_data,alu_data2,aluop);
	
	wr_data = mux_n<WORD_SIZE>(lui,ins[0..19].power<12>(0),alu_res);

end where

